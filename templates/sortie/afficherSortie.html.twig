{% extends 'base.html.twig' %}

{% block title %}{{sortie.nom}}{% endblock %}

{% block body %}
    <div>
        <ul>
            <li>{{ sortie.nom }} </li>
            <li>{{ sortie.dateHeureDebut | date('d/m/Y H:i') }} </li>
            <li>{{ sortie.dateLimiteInscription | date('d/m/Y H:i') }}</li>
            <li>{{ sortie.nbInscriptionsMax }}</li>
            <li>{{ sortie.duree | date('H:i') }}</li>
            <li>{{ sortie.infosSortie }}</li>
        </ul>
    </div>
    <div>
        <ul>
            <li>{{ sortie.lieu.ville.nomVille }}</li>
            <li>{{ sortie.lieu.ville.codePostal }}</li>
        </ul>
    </div>

    <div>
        <h1>Liste des participants inscrits</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">1</th>
                <td></td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td></td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td></td>
            </tr>
    </div>
{% endblock %}
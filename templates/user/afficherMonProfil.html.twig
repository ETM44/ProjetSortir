{% extends 'base.html.twig' %}

{% block titre %}
    <h1 class="table"> {{ participant.pseudo }}, mon profil</h1>
{% endblock %}

{% block javascript %}
<script>
    document.getElementById('go-back').addEventListener('click', () => {
    history.back()
});
</script>

{% endblock %}

{% block body %}

    <div class="profile-picc">
        <label class="-label" for="file">
            <span class="glyphicon glyphicon-camera"></span>
        </label>
        <img src="{{ asset('img/profilepic.png') }}" id="output" width="200" />
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="row">Prénom</th>
            <td>{{ participant.prenom }}</td>
        </tr>
        <tr>
            <th scope="row">Nom</th>
            <td>{{participant.nom }}</td>
        </tr>
        <tr>
            {% if participant.telephone %}
                <th scope="row"Téléphone></th>
                <td>{{ participant.telephone }}</td>
            {% endif %}
        </tr>
        <tr>
            <th scope="row">Email</th>
            <td>{{ participant.email }}</td>
        </tr>
        <tr>
            <th scope="row">Campus de rattachement</th>
            <td>{{ participant.site.nom }}</td>
        </tr>
        </thead>
    </table>

    <div class="col-3">
        <a class="btn btn-modifier"  href="{{ path('modifier_profil')}}">Modifier</a>
    </div>
    <input type="button" id="go-back" class="btn btn-warning" value="Retour" onclick="history.back()">

{% endblock %}